<script>
function showSurprise() {
    let surprise = document.getElementById('surprise');
    surprise.style.display = 'block';
    setTimeout(() => surprise.style.opacity = 1, 50);

    // Confetti for 5 seconds
    let duration = 5 * 1000;
    let end = Date.now() + duration;

    (function frame() {
        confetti({ particleCount: 8, angle: 60, spread: 55, origin: { x: 0 } });
        confetti({ particleCount: 8, angle: 120, spread: 55, origin: { x: 1 } });
        if (Date.now() < end) {
            requestAnimationFrame(frame);
        }
    })();

    // Floating cake emojis
    for (let i = 0; i < 10; i++) {
        let cake = document.createElement('div');
        cake.className = 'cake-emoji';
        cake.innerText = '🍰';
        cake.style.left = Math.random() * 100 + 'vw';
        cake.style.bottom = '0px';
        document.body.appendChild(cake);
        setTimeout(() => cake.remove(), 4000);
    }
}
</script>
